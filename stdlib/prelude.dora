internal class Array<T> {
  init() {}
  init(len: int) {}
  init(len: int, value: T) {
    var i = 0;

    while i < len {
      self[i] = value;
      i = i + 1;
    }
  }

  internal fun len() -> int;
  internal fun get(idx: int) -> T;
  internal fun set(idx: int, val: T);
}

