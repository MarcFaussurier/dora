//= vm-args "--gc=swiper --gc-verify"

fun main() {
  let x = Foo(1, nil);
  forceCollect();
  x.next = Foo(2, nil);
  // Promote x to old generation. Make sure that
  // promoted objects with references to young generations
  // are updated too.
  forceCollect();
  assert(x.next.a == 2);
  // Promote Foo(2, nil) into old generation and set
  // card to clean again.
  forceCollect();
  assert(x.next.a == 2);
}

class Foo(let a: int, var next: Foo)
