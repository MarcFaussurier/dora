fun main() {
    let val = String::from("abc");
    assert(val.len() == 3);
    assert(val.codePoints().len() == 3);
    let it = val.codePoints();

    assert(it.next() == 'a');
    assert(it.toString() == String::from("bc"));
    assert(it.next() == 'b');
    assert(it.toString() == String::from("c"));
    assert(it.next() == 'c');
    assert(it.toString() == String::from(""));
    assert(it.hasNext() == false);

    let val = String::from("üß");
    assert(val.len() == 4);
    assert(val.codePoints().len() == 2);
    let it = val.codePoints();

    assert(it.next().toInt() == 0xFC);
    assert(it.next().toInt() == 0xDF);
    assert(it.hasNext() == false);

    let it = val.codePoints();

    assert(it.next() == 'ü');
    assert(it.next() == 'ß');
    assert(it.hasNext() == false);
}
